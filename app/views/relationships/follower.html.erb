<main>
  <table class = "table table-hover table-inverse">
    <h2>Follower Users</h2>
    <% if @users.follower_user.count > 0 %>
      <tbody>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan = "3"></th>
          </tr>
          <tr>
            <% @users.follower_user.each do |user| %>
              <td><%= attachment_image_tag user, :profile_image, size: "40x40", fallback: "no_image.jpg"%></td>
              <td><%= user.name %></td>
              <td><p>フォロー数：<%= user.following_user.count %></p></td>
              <td><p>フォロワー数：<%= user.follower_user.count %></p></td>
              <td><%= link_to "Show",user_path(user.id) %></td>
            <% end %>
          </tr>
        </tbody>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
  </table>
</main>
